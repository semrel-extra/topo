{
  "name": "@semrel-extra/topo",
  "version": "0.0.0",
  "description": "Helper to resolve monorepo dependencies graph",
  "publishConfig": {
    "access": "public"
  },
  "main": "./target/es5/index.cjs",
  "type": "module",
  "exports": {
    "require": "./target/es5/index.cjs",
    "import": "./target/es6/index.mjs",
    "module": "./target/es6/index.mjs"
  },
  "scripts": {
    "build": "yarn build:es6 && yarn build:es5",
    "build:es6": "yarn build:es6:target && yarn build:es6:libdef && yarn build:es6:ext",
    "build:es6:target": "node ./build.es6.cjs",
    "build:es6:libdef": "tsc --emitDeclarationOnly --outDir target/es6",
    "build:es6:ext": "tsc-esm-fix --target=target/es6 --ext=.mjs",
    "build:es5": "yarn build:es5:target && yarn build:es5:libdef && yarn build:es5:ext",
    "build:es5:target": "node ./build.es5.cjs",
    "build:es5:libdef": "tsc --emitDeclarationOnly --outDir target/es5",
    "build:es5:ext": "rename 's/\\.js$/\\.cjs/' target/es5/*.js",
    "test": "yarn test:unit",
    "test:unit": "c8 -r html -r text -r lcov loadr -- uvu 'src/test/' -i fixturess"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antongolub/lockfile.git"
  },
  "keywords": [
    "lock",
    "lockfile",
    "lockfile2",
    "yarn",
    "yarnlock",
    "yarn.lock",
    "package-lock",
    "npm"
  ],
  "author": "Anton Golub <antongolub@antongolub.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/lockfile/issues"
  },
  "homepage": "https://github.com/antongolub/lockfile#readme",
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "@types/toposort": "^2.0.3",
    "fast-glob": "^3.2.7",
    "toposort": "^2.0.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "esbuild": "^0.14.2",
    "esbuild-node-externals": "^1.4.0",
    "loadr": "^0.1.1",
    "tsc-esm-fix": "^2.7.4",
    "tsm": "^2.2.1",
    "typescript": "^4.5.2",
    "uvu": "^0.5.2"
  }
}
